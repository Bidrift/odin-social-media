<%= turbo_stream.remove(@comment) %>
<% if @comment.post.comments.size == 0 %>
    <turbo-stream action="update" target="comments-<%= @comment.post.id.to_s %>">
        <template>
            <small class="text-muted">There are no comments in this post yet.</small>
        </template>
    </turbo-stream>
<% end %>

<%= render 'counter' %>