<div class="bg-white shadow-sm px-4 py-4 mb-2 rounded">
    <div class="d-flex justify-content-between align-items-center">
        <h3><%= post.creator.username %> <small class="text-muted fs-6 fw-normal"><%= link_to time_ago_in_words(post.created_at)+" ago", post_path(post), class: "text-reset text-decoration-none" %></small></h3>
        <% if current_user == post.creator %>
            <div class="d-flex justify-content-end gap-5">
                <%= link_to "Edit post", edit_post_path(post) %>
                <%= link_to "Delete post", post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
        <% end %>
    </div>
    
    <hr/>
    <p class="fs-5"><%= post.body %></p>
</div>