<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "needs-validation") do |f| %>
  <div class="field control col-4">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field control col-4 mb-2">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check form-switch mb-4">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions control mb-4">
    <%= f.submit "Log in", class: "btn btn-primary fw-medium" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
